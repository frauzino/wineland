<div class="product-card">
  <div class="product-card-image-wrapper">
    <%= image_tag product.image, alt: product.name, class: 'product-card-image' %>
  </div>
  <div class="product-card-content">
    <div class="product-card-product-info">
      <h3><%= product.name %></h3>
      <%= render "components/price", product: %>
    </div>
    <%= render 'components/button', type: 'link', text: 'Discover', path: product_path(product), variant: button_type %>
  </div>
</div>

<div class="devise-container">
  <h2 class="page-title">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise-form">
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm New Password" %>
      </div>

      <div class="actions">
        <%= render "components/button", text: 'Change password', path: password_path(resource_name), variant: 'primary', type: 'submit' %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>

<%# accepts: text: string, path: string/helper, variant: string, type: string %>

<div class="button-wrapper">
  <% if type == 'link' %>
    <%= link_to text, path, class: "btn btn-#{variant}" %>
  <% elsif type == 'submit' %>
    <%= button_tag text, class: "btn btn-#{variant}" %>
  <% elsif type == 'close' || type == 'delete' %>
    <%= button_to path, method: :delete, class: "btn btn-#{variant}"  do %>
      <i class="fa-solid fa-x"></i>
    <% end %>
  <% else %>
    <%= button_to text, path, method: :post, class: "btn btn-#{variant}" %>
  <% end %>
</div>

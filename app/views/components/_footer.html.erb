<%# accepts: links: array of hashes %>

<footer class="footer">
  <div class="footer-content">
    <div class="footer-links">
      <ul class="footer-links-left">
        <% links[0..2].each do |link| %>
          <li class="footer-link">
            <%= link_to link[:link_text], link[:link_path], class:'footer-link' %>
          </li>
        <% end %>
      </ul>
      <ul class="footer-links-right">
        <% links[3..].each do |link| %>
          <li class="footer-link">
            <%= link_to link[:link_text], link[:link_path], class:'footer-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; 2024 Okanagan Wineland Dressings, all rights reserved.</p>
  </div>
</footer>
